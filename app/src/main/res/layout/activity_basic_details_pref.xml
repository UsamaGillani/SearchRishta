<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferences.BasicDetailsPref">

    <include layout="@layout/edit_profile_toolbar"
        android:id="@+id/edit_profile_toolbar"/>

    <TextView
        android:id="@+id/label_Professional_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your basic preferences from below"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/et_age_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:hint="Enter your age preferences"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/label_Professional_details"/>

    <EditText
        android:id="@+id/et_height_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:hint="Enter your height preferences"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/et_age_preferences"/>



    <EditText
        android:id="@+id/et_physicalstatus_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:hint="Enter your physical preferences"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/et_height_preferences"/>

    <EditText
        android:id="@+id/et_edit_profile_created_for_prf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:hint="Enter your profile creator"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/et_physicalstatus_preferences"/>

    <EditText
        android:id="@+id/et_edit_mother_tongue_prf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:hint="Enter your mother tongue"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/et_edit_profile_created_for_prf"/>

    <Button
        android:id="@+id/btn_update_basic_preffer_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_mother_tongue_prf"
        android:text="UPDATE BASIC PREFFERED DETAILS"
        android:background="@drawable/roundedbutton"/>


</androidx.constraintlayout.widget.ConstraintLayout>